@using Models.ViewModel;
@model OsobaViewModel;

<style>
    .top20px {
        margin-top: 20px;
    }

    .floatRight {
        float: right;
    }

    .marginRight20px {
        margin-right: 20px;
    }
</style>

<h2>Edit Osoba</h2>

<form asp-action="Update" method="post">
    <input asp-for="@Model.Id" class="form-control" hidden />

    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Ime"></label>
        <input asp-for="@Model.Ime" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Prezime"></label>
        <input asp-for="@Model.Prezime" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="JMBG"></label>
        <input asp-for="@Model.JMBG" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="URLSlika"></label>
        <input asp-for="@Model.URLSlika" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary top20px floatRight">Napravi izmjene</button>
    <a class="btn btn-primary top20px floatRight marginRight20px" href="/User">Nazad</a>
</form>
