<form asp-action="Filter" method="post">
    <div class="container">
        <div class="row">
            <div class="col-6 col-md-10 col-sm-12">
                <div class="form-group">
                    <input class="form-control" placeholder="JMBG" name="JMBG" id="JMBG" />
                </div>
            </div>
            <div class="col-6 col-md-2 col-sm-12">
                <button type="submit" class="btn btn-primary top20px floatRight">Pretraga</button>
            </div>
        </div>
