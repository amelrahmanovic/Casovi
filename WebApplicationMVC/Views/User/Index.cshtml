<table class="table">
    <thead>
    <th>Id</th>
    <th>Ime</th>
    <th>Prezime</th>
    <th>JMBG</th>
    <th>Akcije</th>
    </thead>
    <tbody>
        @foreach (var osoba in ViewData["Osobe"] as List<Osoba>)
        {
            <tr>
                <td>@osoba.Id</td>
                <td>@osoba.Ime</td>
                <td>@osoba.Prezime</td>
                <td>@osoba.JMBG</td>
                <td>
                    <a class="btn btn-danger" href="/User/Izbrisi?id=@osoba.Id">Izbrisi</a>
                    <a class="btn btn-primary" href="/User/Edit?id=@osoba.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>