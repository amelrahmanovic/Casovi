@using Models.Models;
@using Models.ViewModel;
@{
    List<Firma> Firme = (List<Firma>)ViewData["firme"];
}

<style>
    .top20px {
        margin-top: 20px;
    }

    .floatRight {
        float: right;
    }
    .marginRight20px {
        margin-right: 20px;
    }
</style>

<span>Dodavanje novog usera</span>

<form asp-action="Registracija" method="post">
     <div class="form-group">
        <label>Ime:</label>
        <input class="form-control" name="Ime" id="Ime" required />
    </div>
    <div class="form-group">
        <label>Prezime:</label>
        <input class="form-control" name="Prezime" id="Prezime" required />
    </div>
    <div class="form-group">
        <label>JMBG:</label>
        <input class="form-control" name="JMBG" id="JMBG" required />
    </div>

    <div class="form-group">
        <label>Firma:</label>
        
        <select class="form-control" name="FirmaId" id="FirmaId">
            @foreach (Firma x in Firme)
            {
                <option class="form-control" value="@x.FirmaPK">@x.Naziv</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>URL slika:</label>
        <input class="form-control" name="URLSlika" id="URLSlika" required />
    </div>

    <button type="submit" class="btn btn-primary top20px floatRight">Snimi</button>
    <a class="btn btn-primary top20px floatRight marginRight20px" href="/User">Nazad</a>
</form>